<div class="modal fade right" id="depositModal" tabindex="-1" aria-labelledby="depositModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="depositModalLabel">DÃ©poser de l'argent</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mt-3">
                    <form method="post" action="{{ path('user_item', {'id': user.id}) }}">
                        {{ form_label(form.amount) }}
                        {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.amount) %}
                            <div class="invalid-message text-danger">
                                {{ form_errors(form.amount) }}
                            </div>
                        {% endif %}

                        {{ form_widget(form.submit, {'attr': {'class': 'btn pi-bg text-white mt-3'}}) }}

                        <input type="hidden" name="_csrf_token_transaction_user" value="{{ csrf_token('user_deposit_form') }}">
                        <input type="hidden" name="form_deposit" value="1">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>