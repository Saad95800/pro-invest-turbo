<div class="modal fade right" id="dividendModal" tabindex="-1" aria-labelledby="dividendModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dividendModalLabel">Verser des dividendes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mt-3">
                    <form method="post">
                        <label for="amount">Montant</label>
                        <input type="number" id="amount" class="form-control mt-2" name="amount" />
                        <input type="hidden" name="_token" value="{{ csrf_token('dividend_' ~ project.id) }}">
                        <button class="btn pi-bg text-white mt-2">Verser</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>